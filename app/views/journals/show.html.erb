<div class='container py-5 col-8'>
  <%= image_tag "journal.png", class: "journal-icon" %>
  <h2><%= @journal.title %></h2>
  <hr>
</div>
<div class='container mb-5 pb-5'>
  <div class='container d-flex justify-content-center'>
    <%# emotion-<%= @emotion_of_day.emotion_level if @emotion_of_day %>
    <div class="content-wrapper emotion-border-<%= @emotion_of_day.emotion_level if @emotion_of_day %>">
      <h6 class="mb-3"><%= @journal.created_at.strftime('%A %d %I:%M%p') %></h6>
      <p>
        <% if @journal.content %>
          <%= @journal.content %>
        <% else %>
          <%= @journal.rich_content %>
        <% end %>
        <p><%= @score %></p>
      </p>
    </div>
  </div>
  <div class="container text-center py-4">
    <%= link_to "Back", journals_path, class: "btn btn-light" %>
  </div>
</div>
