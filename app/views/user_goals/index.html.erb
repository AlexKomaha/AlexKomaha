<div class="container mt-5">
    <h1><strong>Goals You Have Accomplished</strong></h1>
    <div class="index-paragraph-wrapper mb-5">
      <h4>Keep track of the goals you have achieved</h4>

      <%= link_to "Add a goal", new_user_goal_path, class: "btn btn-flat" %>
    </div>

  <% @user_goals.first(5).each do |user_goal| %>
    <div class="progress">
      <div class="progress-bar progress-bar-striped" role="progressbar" aria-label="Default striped example" style="width: 20%" aria-valuenow="20" aria-valuemin="0" aria-valuemax="100"><%= user_goal.description %>
      </div>
    </div>
  <% end %>
</div>
