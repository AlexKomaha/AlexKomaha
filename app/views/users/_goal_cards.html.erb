<div class='container'>
  <div class='row gx-5'>
    <% if @today_goals.any? %>
      <% @today_goals.first(4).each do |goal| %>
        <div class="col-sm-12">
          <div class="container">
            <div class="card-product my-4 mx-3">
              <div class="card-product-infos">
                <%= render "users/checkbox", goal: goal %></div>
            </div>
          </div>
        </div>
      <% end %>
    <% else %>
      <h6><%= "No goals added yet! Make sure to add a goal today!" if @today_goals.empty? %></h6>
    <% end %>
  </div>
</div>
